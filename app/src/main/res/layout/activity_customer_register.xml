<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerPages.CustomerRegister">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="350dp"
        android:src="@drawable/fdlogin"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="-95dp"
        android:layout_height="350dp"></ImageView>
<ScrollView
    android:layout_width="match_parent"
    android:id="@+id/scrollView"
    android:layout_marginLeft="-30dp"
    android:layout_marginRight="-30dp"
    android:padding="10dp"
    android:layout_below="@id/logo"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_below="@+id/logo"
        android:padding="25dp"
        android:layout_width="match_parent"
        android:background="@drawable/editboxdesign1"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/nameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />
        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/edittext"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />
        <EditText
            android:id="@+id/phoneEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/edittext"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:maxLines="10"
            android:hint="Phone"
           />
        <EditText
            android:id="@+id/passwordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:hint="Password"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="@drawable/edittext"
            />
        <EditText
            android:id="@+id/confirm_passwordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:hint="Confirm Password"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Already Have Account ?.."
            android:layout_marginBottom="30dp" />
    </LinearLayout>

</ScrollView>

    <ImageView
        android:id="@+id/register_submit"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/logginbtn"
        android:layout_marginTop="100dp"
        android:text="Register"
        android:textColor="@color/colorAccent"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textStyle="bold" />
</RelativeLayout>
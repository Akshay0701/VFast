<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customerPages.Customer_Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="350dp"
        android:src="@drawable/fdlogin"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="-95dp"
        android:layout_height="350dp"></ImageView>
    <LinearLayout
        android:layout_below="@+id/logo"
        android:id="@+id/linear1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:background="@drawable/editboxdesign1"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/log_emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/edittext"
            android:textSize="17dp"
            android:hint="Email"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/log_passwordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext"
            android:textStyle="bold"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:hint="Password"
            android:inputType="textEmailAddress"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/recover_pass"
               android:layout_width="wrap_content"
               android:layout_marginLeft="20dp"
               android:text="Recover Password.."
               android:textColor="@color/colorAccent"
               android:layout_height="wrap_content"></TextView>
           <TextView
               android:id="@+id/not_already_account"
               android:layout_width="match_parent"
               android:layout_marginRight="5dp"
               android:textAlignment="textEnd"
               android:text="Not Already Register ?"
               android:textColor="@color/colorAccent"
               android:layout_height="wrap_content"></TextView>
       </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/login_submit"
        android:layout_width="70dp"
        android:src="@drawable/logginbtn"
        android:layout_below="@+id/linear1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_height="70dp"></ImageView>

<ImageView
    android:layout_width="wrap_content"
    android:src="@drawable/design1"
    android:layout_alignParentBottom="true"
    android:layout_marginLeft="-290dp"
    android:layout_marginBottom="-390dp"
    android:layout_height="wrap_content"></ImageView>



</RelativeLayout>